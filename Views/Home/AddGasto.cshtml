
@{
    ViewBag.Title = "AddGasto";
}

<h2>AddGasto</h2>


<h2 id="ViewAddGasto">AddGasto</h2>



@using (Html.BeginForm())
{
 

    <div class="form-horizontal">

        <hr />
        <form action="/home/AddGasto" method="post" enctype="text/plain">

            <div class="form-group">
                <div class="md-form">

                    <h6 for="contact-name" class="font-weight-bold">Registrar Ingreso </h6>

                    @Html.ValidationMessage("SaldoInicial")
                    <select class="combobox form-control" name="Cuenta">
                        <option value="0" selected="selected">Seleccione Cuenta</option>
                        @foreach (var cuenta in ViewBag.Cuentas)
                        {
                            <option value="@cuenta.CuentaId" id="@cuenta.Nombre">@cuenta.Nombre</option>
                        }
                    </select>

                </div>
            </div>


            <div class="form-group">

                <div class="col-md-10">
                    <label>Descripcion</label>
                    @Html.ValidationMessage("Descripcion")
                    <input name="Descripcion" id="Descripcion"/>
                </div>
            </div>
            <div class="form-group">

                <div class="col-md-10">
                    <label>Monto</label>
                    @Html.ValidationMessage("Monto")
                    <input name="Monto" id="Monto" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input id="btnAddGasto" type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </form>




    </div>
}
